<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Test_AmslerGrid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/ToolBarTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/test_amslerGrid" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/testimage_amslerGrid"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/amslergrid" />

            <TextView
                android:id="@+id/testInstruction_amslerGrid"
                style="@style/TestIntroTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="8dp"
                android:maxLines="10"
                android:text="@string/testInstruction_amslerGrid"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/amsler_grid_check1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amsler_grid_check1" />

                <CheckBox
                    android:id="@+id/amsler_grid_check2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amsler_grid_check2" />

                <CheckBox
                    android:id="@+id/amsler_grid_check3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amsler_grid_check3" />


                <CheckBox
                    android:id="@+id/amsler_grid_check4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amsler_grid_check5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/amsler_grid_res_btn"
                        style="@style/thinButtonStyle"
                        android:text="@string/action_showresult" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>